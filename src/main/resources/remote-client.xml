<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
			http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-4.1.xsd">
	
	<!-- hessian 客户端 -->
	<bean id="evComment" class="com.chetong.aic.api.remoting.AuthHessianProxyFactoryBean" scope="singleton">
        <property name="connectTimeOut" value="${ev.remoting.connectTimeout}" />
        <property name="readTimeOut" value="${ev.remoting.readTimeout}" />
        <property name="serviceUrl" value="${ev.remoting.url}/EvCommentRemoting" />
        <property name="serviceInterface" value="com.chetong.aic.evaluate.api.remoting.EvComment" />
    </bean>
    
	
</beans>