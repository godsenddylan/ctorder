<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
			http://www.springframework.org/schema/aop 
	    	http://www.springframework.org/schema/aop/spring-aop.xsd
			http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-4.1.xsd">
	
	<!-- dubbo服务日志和返回码aop -->
	<bean id="remotService" class="net.chetong.order.common.interceptor.RemoteServiceAdapter"></bean>
	<aop:config>
		<aop:aspect id="remotServiceAspect" ref="remotService">
			<aop:pointcut id="logRecordCut"
				expression="execution(* net.chetong.order.service.remote..*Impl.*(..))" />
			<aop:around pointcut-ref="logRecordCut" method="logRecord" />
		</aop:aspect>
	</aop:config>
	
	<context:component-scan base-package="net.chetong.order.util.redis" />
	<context:component-scan base-package="net.chetong.order.util">
		<context:include-filter type="regex" expression=".Config"/>
	</context:component-scan>
	<context:component-scan base-package="net.chetong.order.common.interceptor" />
	<!--自动扫描含有@Service将其注入为bean -->
	<context:component-scan base-package="net.chetong.order.service.*" />
	<!--引入配置属性文件 -->
	<context:property-placeholder location="classpath:conf/config-develop.properties" />
	<!-- 邮件发送 -->
    <import resource="classpath:spring-mail.xml" />
	<!-- hessian bean 配置 -->
    <!-- <import resource="classpath:remote-client.xml" /> -->
	<!-- 定时任务-->
    <import resource="classpath:quartz-config.xml" />
    <!-- 永诚保险订单同步的服务端. -->
    <import resource="classpath:spring-cxf-webservice.xml" />
    <!-- dubbo配置 -->
    <import resource="classpath:dubbo-server.xml" />
    <import resource="classpath:dubbo-consumer.xml" />
</beans>
